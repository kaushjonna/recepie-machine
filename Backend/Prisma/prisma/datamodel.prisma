type User {
  id: ID! @unique
  firstName: String!
  lastName: String!
  email: String! @unique
  password: String!
  creations: [Creation]
}

type Creation {
  id: ID! @unique
  userId: User
  name: String!
  description: String!
  photo: String!
  comments: [Comment]
}

type Comment {
  id: ID! @unique
  userId: User!
  text: String!
  creation: Creation
}

type Saved_Recipe {
  id: ID! @unique
  userId: User
  recipeLink: String!
}


type Ingredient {
  id: ID! @unique
  name: String!
}