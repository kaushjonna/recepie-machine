type User {
  id: ID! @unique
  firstName: String!
  lastName: String!
  email: String! @unique
  password: String!
}

type Creation {
  id: ID! @unique
  userId: User
  name: String!
  description: String!
  photo: String!

}

type Comment {
  id: ID! @unique
  userId: User!
  text: String!
}

type Saved_Recipe {
  id: ID! @unique
  userId: User
  recipeLink: String!
}


type Ingredient {
  id: ID! @unique
  name: String!
}